<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:gravity="bottom|center" 
	android:layout_width="wrap_content" 
	android:layout_height="fill_parent">

	<com.darien.fnmods.whatsapp.fab.FloatingImageView
		android:layout_gravity="bottom|center" 
		android:id="@+id/mFloatingTop" 
		android:visibility="gone" 
		android:layout_width="50.0dip"
		android:gravity="center"
		android:layout_height="50.0dip"
		android:layout_margin="8.0dip" 
		/>

	<com.darien.fnmods.whatsapp.fab.FloatingImageView
		android:id="@+id/mFloatingSettings"
		android:layout_width="50.0dip"
		android:layout_height="50.0dip"
		android:layout_gravity="bottom|center"
		android:layout_margin="8.0dip"
		android:gravity="center"
		android:visibility="gone" />

	<com.darien.fnmods.whatsapp.fab.FloatingImageView
		android:id="@+id/mFloatingChat"
		android:layout_width="50.0dip"
		android:layout_height="50.0dip"
		android:layout_gravity="bottom|center"
		android:layout_margin="8.0dip"
		android:gravity="center"
		android:visibility="gone" />

	<com.darien.fnmods.whatsapp.Views.InsLoadingView
		android:layout_gravity="bottom|center"
	    android:src="@drawable/fnmods"
		android:layout_width="67dp"
		android:id="@+id/mFloatingAdd"
		android:layout_height="67dp"
		android:padding="8dp"
		android:elevation="4dp"
		android:layout_margin="8.0dip"
		/>

</FrameLayout>

